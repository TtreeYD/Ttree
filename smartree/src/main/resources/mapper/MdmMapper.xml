<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.smartree.mdm.mapper.MdmMapper">

	<!-- 코드분류 -->
	<select id="selectCommonCodeType" resultType="CommonCodeVO">
		SELECT code_type, type_name
		FROM common_code
	</select>

	<!-- 코드상세 리스트 -->
	<select id="selectCommonCodeList" resultType="CommonCodeVO">
		SELECT code_id
		, code_name
		,
		code_use
		FROM code_detail
		WHERE code_type = #{codeType}
	</select>

	<insert id="insertCommonCode" parameterType="CommonCodeVO">
		<selectKey keyProperty="codeType" resultType="String" order="BEFORE">
			SELECT LPAD( NVL ( MAX(code_type), 0) + 1, 3, '0')
			FROM common_code
		</selectKey>
		INSERT INTO common_code
		VALUES(#{codeType}, #{typeName})
	</insert>

	<!-- 사원 리스트 -->
	<select id="selectEmpList" resultType="EmpVO">
		SELECT *
		FROM emp_list
		<where>
			<if test="empDept !=null and !empDept.equals('')">
				emp_dept = #{empDept}
			</if>
			<if test="empName !=null and !empName.equals('')">
				AND emp_name LIKE '%'||#{empName}||'%'
			</if>
		</where>
		ORDER BY emp_id
	</select>

</mapper>